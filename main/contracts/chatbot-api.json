{
  "openapi": "3.0.0",
  "info": {
    "title": "RAG Chatbot API",
    "version": "1.0.0",
    "description": "API for the documentation RAG chatbot."
  },
  "paths": {
    "/query": {
      "post": {
        "summary": "Submit a query to the chatbot",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/QueryRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "A successful response from the chatbot.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/QueryResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "QueryRequest": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "The user's query."
          },
          "conversationHistory": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ChatMessage"
            },
            "description": "Optional: The history of the conversation."
          }
        },
        "required": ["query"]
      },
      "QueryResponse": {
        "type": "object",
        "properties": {
          "response": {
            "type": "string",
            "description": "The chatbot's generated response."
          },
          "sources": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Source"
            },
            "description": "A list of sources used to generate the response."
          }
        }
      },
      "ChatMessage": {
        "type": "object",
        "properties": {
          "role": {
            "type": "string",
            "enum": ["user", "assistant"]
          },
          "content": {
            "type": "string"
          }
        }
      },
      "Source": {
        "type": "object",
        "properties": {
          "tutorialId": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "url": {
            "type": "string"
          }
        }
      }
    }
  }
}
